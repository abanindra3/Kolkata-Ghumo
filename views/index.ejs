    <section id="top-spots">
    <main class="content">
        <section class="tourist-spots">
            <h2>Top Tourist Spots</h2>
            <div class="spot-container">
                <div class="spot active" id="spot1">
                    <img src="/images/kolkata.jpg" alt="Location 1" class="spot-img">
                    <div class="spot-overlay">
                        <h3>Howrah Bridge</h3>
                        <p>This Is The Famous Howrah Bridge...</p>
                        <button onclick="window.location.href='/location1'">View More</button>
                    </div>
                </div>
            
                <div class="spot" id="spot2">
                    <img src="/images/ecop.jpg" alt="Location 2" class="spot-img">
                    <div class="spot-overlay">
                        <h3>Eco Park 
                  
                        </h3>
                        <p>ECO park has emerged as the top tourist spot lately...</p>
                        <button onclick="window.location.href='/location2'">View More</button>
                    </div>
                </div>
                <div class="spot" id="spot3">
                    <img src="/images/laketown.jpg" alt="Location 3" class="spot-img">
